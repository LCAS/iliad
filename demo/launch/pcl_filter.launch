<launch>
  
  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <!-- Run a passthrough filter to clean NaNs -->
  <node pkg="nodelet" type="nodelet" name="passthroughX" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/robot1/kinect2/depth/points" />
    <remap from="~output" to="/robot1/kinect2/depth/points_f" />
    <rosparam>
      filter_field_name: x
      filter_limit_min: 0.3
      filter_limit_max: 1000
      filter_limit_negative: False
    </rosparam>
  </node>
  
  
  
  <!-- Run a passthrough filter to clean NaNs -->
  <node pkg="nodelet" type="nodelet" name="passthroughY" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/robot1/kinect2/depth/points_f" />
    <remap from="~output" to="/robot1/kinect2/depth/points_ff" />
    <rosparam>
        filter_field_name: y
        filter_limit_min: -0.3
        filter_limit_max:  0.3
        filter_limit_negative: True
    </rosparam>
  </node>

</launch>
